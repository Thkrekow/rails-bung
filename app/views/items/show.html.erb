<h2><%= @item.title %></h2>
<p><%= @item.description %></p>
<hr>

<%= link_to root_path, class: "btn btn-default" do %>
  <i class="fa fa-chevron-left" aria-hidden="true"><h6>Zurück</h6></i>
<% end %>
<%= link_to edit_item_path, class: "btn btn-default" do %>
  <i class="fa fa-pencil-square-o" aria-hidden="true"><h6>Editieren</h6></i>
<% end %>
<%= link_to item_path(@item), method: :delete, data: { confirm: "Bist du sicher?"}, class: "btn btn-default" do %>
  <i class="fa fa-trash" aria-hidden="true"><h6>Löchen</h6></i>
<% end %>
