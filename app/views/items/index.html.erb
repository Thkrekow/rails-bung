<h1>Meine Aufgaben</h1>
<%= link_to "Neuer Eintrag", new_item_path, class: "btn btn-default"%>
<hr>

<% @items.each do |item| %>
    <div class="row item">
        <% if item.completed? %>
              <div class="col-md-6">
                <h2><s><%= link_to item.title, item %></s></h2>
                <p><%= time_ago_in_words(item.completed_at)%> ago.</p>
               </div>
              <div class="col-md-2">
          </div>
      <% else %>
            <div class="col-md-6">
              <h2><%= link_to item.title, item %></h2>
              <p><%= item.description %></p>
            </div>
            <div class="col-md-2">
              <%= link_to complete_item_path(item), method: :patch do %>
                <h2><i class="fa fa-flag-checkered" aria-hidden="true"></i></h2>
      <% end %>
          </div>
  <% end %>


  </div>
  <% end %>
